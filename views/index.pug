doctype html

html
    head
        title tasks
    body
        h2 All tasks that you have 
        <form action="/tasks" method="post" >
            ul
             - tasks.forEach(function(task){
              li: a(href='/task/'+ task.id) #{task.id} : #{task.title}
         
             - })
             input(
             type='text'
             name='id'
             placeholder='type id'
             )
             input(
             type='text'
             name='title'
             placeholder='type the task you want to add'
             style='width:400px'
             )
             <button type='submit'>add it</button>
</form>